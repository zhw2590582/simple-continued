.title{
  margin-top: 0;
  padding: 10px;
  text-align: center;
}

.card-header {
  display: flex;
  height: 20px;
  padding: 10px;
  border-bottom: 1px solid #e5e5e5;
}

.card-header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.card-header .card-header-left .avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 10px;
}

.card-content{
  padding: 10px;
  min-height: 100px;
}