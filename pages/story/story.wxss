.title {
  margin-top: 0;
  padding: 10px;
  text-align: center;
  font-weight: bold;
}

.card-header {
  display: flex;
  height: 20px;
  padding: 10px;
  border-bottom: 1px solid #e5e5e5;
}

.card-header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.card-header .card-header-left .avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 10px;
}

.card-content {
  padding: 10px;
  min-height: 50px;
}

.card-mate {
  padding: 0 10px 10px;
}

.story-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  display: flex;
  align-items: center;
  width: 100%;
  height: 45px;
  background-color: #fff;
}

.story-bottom .item {
  position: relative;
  flex: 1;
  text-align: center;
}

.story-bottom .item .story-bottom-icon {
  width: 25px;
  height: 25px;
}

.story-bottom .item .story-bottom-name {
  line-height: 1;
}

.story-bottom .share{
  opacity: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
}

.roundItem {
  padding: 10px;
}

.zan-popup__container {
  width: 100%;
  height: 230px;
  padding: 10px;
  left: 0;
  right: 0;
  box-sizing: border-box;
}

.zan-popup__container textarea{
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 3px;
  padding: 2px;
  margin-bottom: 15px;
  box-sizing: border-box;
}

.zan-popup__container .storyWriteBtns{
  display: flex;
}

.zan-popup__container .storyWriteBtns .zan-btn {
  flex: 1;
}

.zan-btn + .zan-btn {
  margin-left: 10px;
}